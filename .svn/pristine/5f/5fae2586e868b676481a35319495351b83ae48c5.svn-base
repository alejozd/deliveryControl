// ImpresionUtils.js
export const PrintDocument = ({ factura, isConfirmationModal }) => {
  if (!factura) {
    console.error("No se puede imprimir: datos de entrega no válidos.");
    return;
  }
  const cantidadHeader = isConfirmationModal ? 'Cant. a Entregar' : 'Cant. Entregada';

  const cantidadContent = factura.detalle.map(detalle => `
    <tr>
      <td class="producto">${detalle.nombreproductos}</td>
      <td class="cantidad multiline">${detalle.cantfacturada}</td>
      <td className="cantidad multiline">${isConfirmationModal ? detalle.cantidad_entregar : detalle.cant_entregada}</td>
    </tr>
  `).join('');
  // Lógica para generar el formato HTML personalizado
  const htmlString = `
  <html>
  <head>
    <title>Entrega de Mercancía - ${factura.numeroentrega}</title>
    <style>
      body {
        font-family: 'Arial', sans-serif;
        margin: 20px;
        background-color: #f7f7f7;
        color: #333333;
      }
      .container {
        max-width: 800px;
        margin: auto;
        background-color: #ffffff;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        border-radius: 5px;
      }
      .header {
        text-align: center;
        margin-bottom: 20px;
      }
      h1 {
        color: #333333;
      }
      p {
        margin: 5px 0;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th, td {
        border: 1px solid #dddddd;
        padding: 8px; /* Reducido el padding para hacer las celdas más estrechas */
        text-align: left;
        background-color: #f5f5f5;
      }
      th.producto {
        min-width: 300px;
      }
      th.cantidad, td.cantidad {
        min-width: 50px; /* Reducido el ancho mínimo de las columnas de cantidad */
      }
      .multiline {
        max-width: 150px;
      }
      .line-break {
        white-space: pre-line;
      }
      .footer {
        margin-top: 20px;
        text-align: center;
        color: #777777;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>Entrega de Mercancía</h1>
        <p>Número de Entrega: ${factura.numeroentrega}</p>
        <p>Fecha de Entrega: ${factura.fechaEntrega}</p>
        <p>Cliente: ${factura.nombrecliente}</p>
      </div>
      <table>
        <thead>
          <tr>
            <th class="producto">Producto</th>
            <th class="cantidad multiline">Cant. Facturada</th>                        
            <th class="cantidad multiline">${cantidadHeader}</th>
          </tr>
        </thead>
        <tbody>
        ${cantidadContent}
        </tbody>
      </table>
      <div class="footer">
        <p>¡Gracias por elegirnos!</p>
      </div>
    </div>
  </body>
</html>
  `;

  // Abrir una nueva ventana con el documento HTML
  const printWindow = window.open('', '_blank');
  printWindow.document.write(htmlString);

  // Enviar a imprimir
  printWindow.print();
};
