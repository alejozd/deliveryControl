.product-item {
    display: flex;
    justify-content: space-between;
    padding: 0.5em;
    border-bottom: 1px solid #ddd;
}

.product-name {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-right: 10px;
}

.product-reference {
    flex: 0 0 auto;
    text-align: right;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}