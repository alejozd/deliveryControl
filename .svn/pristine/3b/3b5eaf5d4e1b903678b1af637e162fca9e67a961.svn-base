import { useState, useEffect } from "react";
import { Dialog } from "primereact/dialog";
import { RadioButton } from "primereact/radiobutton";
import { Button } from "primereact/button";
import config from "../../Config";
import axios from "axios";

const WhatsAppDialog = ({ visible, onHide, selectedQuote }) => {
  const apiUrlContactos = `${config.apiUrl}/Datasnap/rest/TServerMethods1/DataContactosCliente`;
  const [contacts, setContacts] = useState([]);
  const [cliente, setCliente] = useState({});
  const [selectedPhoneNumber, setSelectedPhoneNumber] = useState(null);

  useEffect(() => {
    if (selectedQuote) {
      const fetchContactsAndClient = async () => {
        try {
          // Obtener los contactos del cliente
          const response = await axios.put(apiUrlContactos, {
            idcliente: selectedQuote.idcliente,
          });

          if (response.data.status === 200) {
            setContacts(response.data.contactos);
            setCliente(response.data.cliente[0]);
          } else {
            console.error("Error fetching data:", response.data.error);
          }
        } catch (error) {
          console.error("Error fetching data:", error);
        }
      };
      fetchContactsAndClient();
    }
  }, [selectedQuote]);

  const handleSendWhatsAppMessage = () => {
    if (selectedPhoneNumber) {
      // Logic to send WhatsApp message using the selectedPhoneNumber
      console.log("Sending message to:", selectedPhoneNumber);
      onHide();
    }
  };

  return (
    <Dialog
      visible={visible}
      onHide={onHide}
      header="Enviar mensaje por WhatsApp"
    >
      <div className="card flex justify-content-center">
        <div className="flex flex-column gap-3">
          <h3>Selecciona un número de teléfono</h3>
          <div className="flex align-items-center">
            <RadioButton
              inputId="cliente"
              name="phoneNumber"
              value={cliente.telmovilclienteCa}
              onChange={(e) => setSelectedPhoneNumber(e.value)}
              checked={selectedPhoneNumber === cliente.telmovilclienteCa}
            />
            <label htmlFor="cliente" style={{ marginLeft: "5px" }}>
              {cliente.nombreclienteCa} (Cliente) -{" "}
              <strong>{cliente.telmovilclienteCa}</strong>
            </label>
          </div>
          {contacts.map((contact) => (
            <div key={contact.idcontacto}>
              <RadioButton
                inputId={contact.idcontacto}
                name="phoneNumber"
                value={contact.telmovilCa}
                onChange={(e) => setSelectedPhoneNumber(e.value)}
                checked={selectedPhoneNumber === contact.telmovilCa}
              />
              <label htmlFor={contact.idcontacto} style={{ marginLeft: "5px" }}>
                {contact.nombreCa} - <strong>{contact.telmovilCa}</strong>
              </label>
            </div>
          ))}
        </div>
      </div>
      <Button
        label="Enviar"
        icon="pi pi-check"
        severity="success"
        onClick={handleSendWhatsAppMessage}
        disabled={!selectedPhoneNumber}
      />
    </Dialog>
  );
};

export default WhatsAppDialog;
