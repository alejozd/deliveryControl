@import "https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700";
@import "https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,500,600,700";

/* * { padding: 1; margin: 0; } */
html, body, #fullheight {
  font-family: 'Nunito Sans', sans-serif;
  background-color: #f5f9fc;
  height: 100vh;
  min-height: 100vh;
}

#root {
  height: 100%;
}

.App {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: stretch;
}

a,
a:hover,
a:focus {
  color: inherit;
  text-decoration: none;
  transition: all 0.2s;
}

/* ---------------------------------------------------
    CONTENT STYLE
----------------------------------------------------- */
.content {
  padding: 0px;     
  margin-left: 0;
  height: 100%;
  width: 100%;
  /* background-color: aquamarine; */
}

.p-datatable-header {
  padding: 5px; /* Ajusta el valor del padding según tus preferencias */
}

.p-panel-content{
  padding: 0px;
}

.data-pc-section{
  height: 10px;
}

[data-pc-section="bodycell"] {
  padding: 4px; /* Ajusta el valor de padding según tus necesidades */
  font-size: 14px;
}

