import React, { useState, useEffect } from "react";
import { Dialog } from "primereact/dialog";
import { ListBox } from "primereact/listbox";
import { Button } from "primereact/button";
import { InputText } from "primereact/inputtext";
import { IconField } from "primereact/iconfield";
import { InputIcon } from "primereact/inputicon";
import "./SearchDialogListBox.css";

const ProductSearchDialog = ({
  showDialogProduct,
  setShowDialogProduct,
  products,
  onAcceptSelection,
}) => {
  const [selectedProducts, setSelectedProducts] = useState([]);
  const [filteredProducts, setFilteredProducts] = useState(products);
  const [filter, setFilter] = useState("");

  // Reiniciar los productos seleccionados cada vez que showDialogProduct cambie
  useEffect(() => {
    if (!showDialogProduct) {
      setSelectedProducts([]);
    }
  }, [showDialogProduct]);

  useEffect(() => {
    const lowerCaseFilter = filter.toLowerCase();
    const filtered = products.filter(
      (cliente) =>
        cliente.nombreproductos.toLowerCase().includes(lowerCaseFilter) ||
        cliente.referencia.toLowerCase().includes(lowerCaseFilter)
    );
    setFilteredProducts(filtered);
  }, [filter, products]);

  const handleAccept = () => {
    // Extraer los códigos y subcódigos de los productos seleccionados
    const selectedProductsData = selectedProducts.map((selectedProductCode) => {
      // Encuentra el producto correspondiente a este código y subcódigo en la lista de productos completos
      return products.find((product) => {
        return `${product.codigo}-${product.subcodigo}` === selectedProductCode;
      });
    });

    // Llama a la función de devolución de llamada para pasar los códigos y subcódigos seleccionados a Quoter
    onAcceptSelection(selectedProductsData);
    // console.log("Productos seleccionados:", selectedProductsData);
    // Cierra el diálogo después de aceptar
    setShowDialogProduct(false);
  };

  const handleCancel = () => {
    // Cierra el diálogo sin realizar ninguna acción
    setShowDialogProduct(false);
  };

  const footerContent = (
    <div style={{ marginTop: "1em" }}>
      <Button
        label="Aceptar"
        severity="success"
        onClick={handleAccept}
        autoFocus
        size="small"
        icon="pi pi-check"
      />
      <Button
        label="Cancelar"
        severity="danger"
        text
        raised
        size="small"
        onClick={handleCancel}
        icon="pi pi-times"
      />
    </div>
  );

  const itemTemplate = (item) => {
    return (
      <div className="item">
        <span className="item-name">{item.nombreproductos}</span>
        <span className="item-reference">{item.referencia}</span>
      </div>
    );
  };

  const onFilterChange = (e) => {
    setFilter(e.target.value);
  };

  return (
    <Dialog
      visible={showDialogProduct}
      onHide={() => setShowDialogProduct(false)}
      header="Productos Encontrados"
      footer={footerContent}
    >
      <div className="w-full md:w-40rem">
        <div className="sticky-input">
          <IconField iconPosition="right">
            <InputIcon className="pi pi-search" />
            <InputText
              type="search"
              value={filter}
              onChange={onFilterChange}
              placeholder="Buscar producto por nombre o referencia..."
              aria-label="Filtrar productos"
              className="p-inputtext p-component"
              style={{ width: "100%" }}
            />
          </IconField>
        </div>
        <ListBox
          value={selectedProducts}
          options={filteredProducts}
          onChange={(e) => setSelectedProducts(e.value)}
          optionLabel="nombreproductos"
          itemTemplate={itemTemplate}
          optionValue={(option) => `${option.codigo}-${option.subcodigo}`}
          multiple
          // filter
          // className="w-full md:w-40rem"
          emptyMessage="No hay registros para mostrar en la lista"
        />
      </div>
    </Dialog>
  );
};

export default ProductSearchDialog;
