/* Estilos generales */
html {
    font-size: 14px;
}

body {
    font-family: var(--font-family);
    font-weight: normal;
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
/* Contenedor principal del formulario */
.login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh; 
  }
  
  /* Estilos del formulario de inicio de sesión */
  .login-form {
    max-width: 400px;
    margin: 0 auto;
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 1rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .error-message {
    color: red;
    font-size: 0.8rem;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
    text-align: center;
    font-weight: bold;    
    width: 100%;
  }

/* Estilos para pantallas pequeñas (responsive) */
@media (max-width: 600px) {
    .login-form {
      width: 100%; /* El formulario ocupa el ancho completo en pantallas pequeñas */
    }
  }
  