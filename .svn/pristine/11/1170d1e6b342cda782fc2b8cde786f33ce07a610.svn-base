// ImpresionUtils.js
export const PrintDocument = (factura) => {
  // Lógica para generar el formato HTML personalizado
  const htmlString = `
  <html>
<head>
  <title>Entrega de Mercancía - ${factura.NUMEROENTREGA}</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      margin: 20px;
      background-color: #ffffff;
      color: #333333;
    }
    .container {
      max-width: 800px;
      margin: auto;
    }
    .header {
      text-align: center;
      margin-bottom: 20px;
    }
    .details {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    .details th, .details td {
      border: 1px solid #dddddd;
      padding: 12px;
      text-align: left;
      background-color: #f5f5f5;
    }
    .details th {
      min-width: 150px; /* Ancho mínimo para las celdas del encabezado */
    }
    .details .multiline {
      max-width: 150px; /* Ancho máximo para las celdas "Cantidad Facturada" y "Cantidad a Entregar" */
    }
    .line-break {
      white-space: pre-line; /* Mantiene los saltos de línea especificados en el código HTML */
    }
    .footer {
      margin-top: 20px;
      text-align: center;
      color: #777777;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Entrega de Mercancía</h1>
      <p>Número de Entrega: ${factura.NUMEROENTREGA}</p>
      <p>Fecha de Entrega: ${new Date(factura.FECHAENTREGA).toLocaleDateString('es-CO')}</p>
      <p>Cliente: ${factura.NOMBRECLIENTE}</p>
    </div>
    <table class="details">
      <thead>
        <tr>
          <th>Producto</th>
          <th class="multiline">Cantidad Facturada</th>
          <th class="multiline">Cantidad a Entregar</th>
        </tr>
      </thead>
      <tbody>
        ${factura.DETALLE.map((detalle) => `
          <tr>
            <td>${detalle.NOMBREPRODUCTOS}</td>
            <td class="multiline">${detalle.CANTFACTURADA}</td>
            <td class="multiline">${detalle.CANTIDAD_ENTREGAR}</td>
          </tr>
        `).join('')}
      </tbody>
    </table>
    <div class="footer">
      <p>¡Gracias por elegirnos!</p>
    </div>
  </div>
</body>
</html>
  `;

  // Abrir una nueva ventana con el documento HTML
  const printWindow = window.open('', '_blank');
  printWindow.document.write(htmlString);

  // Enviar a imprimir
  printWindow.print();
};
