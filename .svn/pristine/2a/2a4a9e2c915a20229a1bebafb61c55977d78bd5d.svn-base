import { useState, useEffect } from "react";
import { Dialog } from "primereact/dialog";
import { RadioButton } from "primereact/radiobutton";
import { Button } from "primereact/button";
import config from "../../Config";
import axios from "axios";

const WhatsAppDialog = ({ visible, onHide, selectedQuote }) => {
  const apiUrlContactos = `${config.apiUrl}/Datasnap/rest/TServerMethods1/DataContactosCliente`;
  const [phoneNumberOptions, setPhoneNumberOptions] = useState([]);
  const [selectedPhoneNumber, setSelectedPhoneNumber] = useState(null);

  useEffect(() => {
    if (selectedQuote) {
      const fetchContactsAndClient = async () => {
        try {
          // Obtener los contactos del cliente
          const response = await axios.put(apiUrlContactos, {
            idcliente: selectedQuote.cliente.idcliente,
          });

          if (response.data.status === 200) {
            const cliente = response.data.cliente[0];
            const contacts = response.data.contactos;

            // Consolidar los números de teléfono en una lista y filtrar aquellos sin número
            const options = [
              {
                nombre: cliente.nombreclienteCa,
                key: cliente.idclienteCa,
                telefono: cliente.telmovilclienteCa,
              },
              ...contacts.map((contact) => ({
                nombre: contact.nombreCa,
                key: contact.idcontacto,
                telefono: contact.telmovilCa,
              })),
            ].filter((option) => option.telefono);

            setPhoneNumberOptions(options);
          } else {
            console.error("Error fetching data:", response.data.error);
          }
        } catch (error) {
          console.error("Error fetching data:", error);
        }
      };
      fetchContactsAndClient();
    }
  }, [selectedQuote]);

  // Restablecer el número de teléfono seleccionado cuando se abre el diálogo
  useEffect(() => {
    if (visible) {
      setSelectedPhoneNumber(null);
    }
  }, [visible]);

  const handleSendWhatsAppMessage = async () => {
    try {
      if (selectedPhoneNumber) {
        // Abrir la conversación de WhatsApp con el número seleccionado
        const whatsappURL = `https://wa.me/57${selectedPhoneNumber.telefono}`;
        window.open(whatsappURL, "_blank");
      } else {
        console.error("No phone number selected");
      }
    } catch (error) {
      console.error("Error in handleSendWhatsAppMessage:", error);
    } finally {
      onHide();
    }
  };

  return (
    <Dialog
      visible={visible}
      onHide={onHide}
      header="Enviar mensaje por WhatsApp"
    >
      <div className="card flex justify-content-center">
        <div className="flex flex-column gap-3">
          <h3>Selecciona un número de teléfono</h3>
          {phoneNumberOptions.length > 0 ? (
            phoneNumberOptions.map((option) => (
              <div key={option.key}>
                <RadioButton
                  inputId={`telefono-${option.key}`}
                  name="phoneNumber"
                  value={option}
                  onChange={() => setSelectedPhoneNumber(option)}
                  checked={
                    selectedPhoneNumber &&
                    selectedPhoneNumber.key === option.key
                  }
                />
                <label
                  htmlFor={`telefono-${option.key}`}
                  style={{ marginLeft: "5px" }}
                >
                  {option.nombre} - <strong>{option.telefono}</strong>
                </label>
              </div>
            ))
          ) : (
            <p>No hay números de teléfono disponibles para este cliente.</p>
          )}
        </div>
      </div>
      <Button
        label="Enviar"
        icon="pi pi-check"
        severity="success"
        onClick={handleSendWhatsAppMessage}
        disabled={!selectedPhoneNumber}
      />
    </Dialog>
  );
};

export default WhatsAppDialog;
